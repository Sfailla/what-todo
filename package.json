{
	"name": "new-todo-app",
	"version": "1.0.0",
	"description": "Im creating a react front-end for a todo app tutorial by Andrew Mead",
	"main": "index.js",
	"engines": {
		"node": "10.15.1",
		"npm": "6.4.1"
	},
	"scripts": {
		"dev:start": "concurrently -k \"npm run dev:server\" \"npm run client\"",
		"dev:server": "nodemon server/server.js",
		"client": "cd client && npm start",
		"build": "cd client && npm run build",
		"start": "node server/server.js",
		"test-watch": "nodemon --exec \"npm test\"",
		"test": "export NODE_ENV=test || SET \"NODE_ENV=test\" && mocha server/**/*.test.js"
	},
	"author": "steve failla",
	"license": "ISC",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.18.2",
		"concurrently": "^3.5.1",
		"crypto-js": "^3.1.9-1",
		"express": "^4.16.2",
		"jsonwebtoken": "^8.1.1",
		"jwt-decode": "^2.2.0",
		"lodash": "^4.17.5",
		"mongoose": "^5.0.4",
		"node-sass": "^4.12.0",
		"react-router-dom": "^5.0.1",
		"validator": "^10.2.0"
	},
	"devDependencies": {
		"expect": "^24.5.0",
		"mocha": "^5.0.1",
		"morgan": "^1.9.0",
		"nodemon": "^1.17.1",
		"supertest": "^3.0.0"
	}
}
